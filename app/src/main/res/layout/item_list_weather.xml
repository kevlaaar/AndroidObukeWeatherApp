<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/border_round_yellow">

    <TextView
        android:id="@+id/weatherLocationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:text="London"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/weatherDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123123123"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/weatherLocationText"
        app:layout_constraintTop_toBottomOf="@id/weatherLocationText" />

    <ImageView
        android:id="@+id/weatherImage"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="10dp"
        android:src="@drawable/icon_sunny_big"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/weatherDegreesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="35c"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/weatherImage"
        app:layout_constraintStart_toEndOf="@id/weatherLocationText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/weatherMinDegreesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Min: 35c"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/weatherDegreesText"
        app:layout_constraintTop_toBottomOf="@id/weatherDegreesText" />

    <TextView
        android:id="@+id/weatherMaxDegreesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Max: 35c"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/weatherDegreesText"
        app:layout_constraintTop_toBottomOf="@id/weatherMinDegreesText" />


</androidx.constraintlayout.widget.ConstraintLayout>
